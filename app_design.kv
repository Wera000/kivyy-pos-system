                                text: '11/30/2025'
                                size_hint_x: 0.7
                        
                        BoxLayout:
                            Label:
                                text: 'Invoice'
                                size_hint_x: 0.3
                                color: 0, 0, 0, 1
                            TextInput:
                                size_hint_x: 0.7

