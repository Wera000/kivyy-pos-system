                                multiline: False
                                size_hint_y: None
                                height: 35
                                size_hint_x: 0.6
                            
                            # Row 2: Product Name
                            Label:
                                text: 'Product Name'
                                halign: 'left'
                                text_size: self.size
                                color: 0, 0, 0, 1
                            TextInput: # Placeholder for dropdown
                                multiline: False
                                size_hint_y: None
