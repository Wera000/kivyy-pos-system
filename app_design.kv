# Define styles for the CustomButton (used on MainScreen)
<CustomButton@Button>:
    # Styling to match the screenshot (light background, blue border)
    background_normal: ''
    background_color: 0.95, 0.98, 0.95, 1  # Very light beige/green for background
    border: (2, 2, 2, 2)
    color: 0.1, 0.1, 0.1, 1 # Dark text color
    font_size: '20sp'
    size_hint: 0.3, 0.1  # Set button size relative to parent

# Define a style for the Transaction Buttons (Buy Instad/Debt)
<TxButton@Button>:
    background_normal: ''
    background_color: 0.7, 0.85, 0.7, 1 # Light green background
    color: 0.1, 0.1, 0.1, 1
    font_size: '18sp'
    bold: True
    size_hint: 0.45, 0.1 # Small size relative to its container

# Define a style for the Sale Action Buttons (right column)
<SaleActionButton@Button>:
    background_normal: ''
    background_color: 0.9, 0.9, 0.9, 1 # Light grey
    color: 0, 0, 0, 1
    font_size: '18sp'
    size_hint_y: None
    height: 45
    margin: 5
    
# Define a style for Employee Action Buttons
<EmployeeActionButton@Button>:
    background_normal: ''
    font_size: '20sp'
    color: 0, 0, 0, 1
    size_hint: 0.22, 0.8 # Size relative to its button container
    bold: True
    
# --- Screen Manager Definition ---
<CustomScreenManager>:

# --- Main Screen Definition ---
<MainScreen>:
    name: 'main'
    
    RelativeLayout:
        canvas.before:
            Color:
                rgba: 0.6, 0.7, 0.8, 1 # Medium grey-blue background
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'LABH HTOO EAIN(Main Section)'
            size_hint: 1, 0.2
            pos_hint: {'top': 1, 'x': 0}
            font_size: '30sp'
            bold: True
            color: 0, 0, 0, 1

        GridLayout:
            size_hint: 0.9, 0.6
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}
            cols: 3
            spacing: 20
            padding: 20

            # Row 1 Buttons
            CustomButton:
                text: 'Inventory'
                on_press: app.root.current = 'inventory'

            CustomButton:
                text: 'Purchase'
                on_press: app.root.current = 'purchase'

            CustomButton:
                text: 'Sale'
                on_press: app.root.current = 'sale'

            # Row 2 Buttons
            CustomButton:
                text: 'Employee Management'
                on_press: app.root.current = 'employee_management'

            CustomButton:
                text: 'Damaged List'
                on_press: app.root.current = 'damaged_list'

            CustomButton:
                text: 'Mothly List'
                on_press: app.root.current = 'monthly_list'

# --- Inventory Screen Definition ---
<InventoryScreen>:
    name: 'inventory'
    
    RelativeLayout:
        canvas.before:
            Color:
                rgba: 0.6, 0.7, 0.8, 1 # Medium grey-blue background
            Rectangle:
                pos: self.pos
                size: self.size
        
        Label:
            text: 'LABH HTOO EAIN(Inventory)'
            size_hint: 1, 0.2
            pos_hint: {'top': 1, 'x': 0}
            font_size: '30sp'
            bold: True
            color: 0, 0, 0, 1
            
        BoxLayout:
            size_hint: 0.9, 0.7
            pos_hint: {'center_x': 0.5, 'center_y': 0.45}
            orientation: 'vertical'
            
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1 # White box for data
                Rectangle:
                    pos: self.pos
                    size: self.size
            
            Label:
                text: 'Database columns (Product Nam, Quantity, buy price etc...) show here.'
                size_hint_y: 1
                font_size: '22sp'
                color: 0.3, 0.3, 0.3, 1
                text_size: self.size
                valign: 'middle'
                halign: 'center'

        Button:
            text: 'Exit'
            size_hint: 0.15, 0.08
            pos_hint: {'right': 0.95, 'bottom': 0.05}
            font_size: '20sp'
            background_normal: ''
            background_color: 0.8, 0.2, 0.2, 1
            color: 1, 1, 1, 1
            on_press: app.root.current = 'main'

# --- Purchase Screen Definition (Complex layout with tabs) ---
