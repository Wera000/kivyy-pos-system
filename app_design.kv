    name: 'purchase'
    
    BoxLayout:
        orientation: 'vertical'
        padding: 5
        spacing: 5
        
        # 1. Main Header / Back Button
        BoxLayout:
            size_hint_y: 0.08
            padding: [10, 0, 10, 0]
            
            Label:
                text: 'LABH HTOO EAIN(Purchase)'
                font_size: '28sp'
                bold: True
                color: 0, 0, 0, 1
                size_hint_x: 0.8
            
            Button:
                text: '<< Back'
                size_hint_x: 0.2
                font_size: '18sp'
                background_color: 0.8, 0.8, 0.8, 1
                on_press: app.root.current = 'main'
                
        # 2. Top-Level TabbedPanel (Product Type: Tablet, Syrup, Injection, Myanmar)
